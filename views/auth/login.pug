extends ../layouts/common

block content
    h1 Login

    if errors
        each error in errors
            .alert.alert-danger= error

    form.mt-5(action="/auth/login", method="POST")
        label(for="account") Account
        .form-group
            input#account.form-control(type="text", name="useraccount", value=value ? value.useraccount : '')

        label(for="password") Password
        .form-group
            input#password.form-control(type="password", name="password", value=value ? value.password : '')

        button.btn.btn-primary Login