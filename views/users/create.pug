extends ../layouts/common

block content
    h1 Create User

    if errors
        each error in errors
            .alert.alert-danger= error

    form.mt-5(action="/users/create", method="POST", enctype="multipart/form-data")
        .form-group
            label(for="name") Name
            input#name.form-control(type="text", name="name", value=value ? value.name : '')

        .form-group
            label(for="phone") Phone
            input#name.form-control(type="number", name="phone", value=value ? value.phone : '')

        .form-group
            label(for="email") Email
            input#email.form-control(type="email", name="email", value=value ? value.email : '')

        .form-group
            label(for="password") Password
            input#password.form-control(type="password", name="password", value=value ? value.password : '')

        .form-group
            label(for="avatar") Avatar
            input#avatar.form-control-file(type="file", name="avatar")

        button.btn.btn-primary Create