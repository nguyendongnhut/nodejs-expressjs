extends ../layouts/common

block content
    h1 Create User

    if errors
        each error in errors
            .alert.alert-danger= error

    form.mt-5(action="/users/create", method="POST")
        label(for="name") Name
        .form-group
            input#name.form-control(type="text", name="name", value=value ? value.name : '')

        label(for="phone") Phone
        .form-group
            input#name.form-control(type="number", name="phone", value=value ? value.phone : '')

        label(for="email") Email
        .form-group
            input#email.form-control(type="email", name="email", value=value ? value.email : '')

        label(for="password") Password
        .form-group
            input#password.form-control(type="password", name="password", value=value ? value.password : '')

        button.btn.btn-primary Create